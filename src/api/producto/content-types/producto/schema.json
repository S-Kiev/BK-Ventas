{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Producto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "precioBase": {
      "type": "decimal",
      "required": true
    },
    "precioVenta": {
      "required": true,
      "type": "decimal"
    },
    "imagen": {
      "type": "string",
      "required": false,
      "unique": false
    },
    "stock": {
      "type": "biginteger"
    },
    "categoria": {
      "type": "enumeration",
      "enum": [
        "comestible",
        "higiene",
        "medicamento",
        "todas"
      ],
      "required": true
    },
    "disponibilidad": {
      "type": "boolean"
    }
  }
}
